{
  "name": "teal",
  "displayName": "TEAL",
  "description": "Algorand TEAL language support for Visual Studio Code",
  "author": {
    "name": "DragMZ"
  },
  "publisher": "DragMZ",
  "license": "MIT",
  "version": "0.1.13",
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.73.0"
  },
  "repository": {
    "url": "https://github.com/dragmz/vscode-teal"
  },
  "activationEvents": [
    "onLanguage:teal",
    "onCommand:teal.tools.install",
    "onDebug"
  ],
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "main": "./out/extension.js",
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "contributes": {
    "commands": [
      {
        "command": "teal.tools.install",
        "title": "TEAL: Install/Update Tools"
      }
    ],
    "languages": [
      {
        "id": "teal",
        "aliases": [
          "teal"
        ],
        "extensions": [
          ".teal"
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "teal"
      }
    ],
    "debuggers": [
      {
        "type": "teal",
        "label": "Debug TEAL",
        "languages": [
          "teal"
        ],
        "configurationAttributes": {
          "launch": {
            "required": [
              "program"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Absolute path to a TEAL file."
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "name": "Debug TEAL",
            "type": "teal",
            "request": "launch",
            "program": "${file}"
          }
        ],
        "configurationSnippets": [
          {
            "label": "TEAL Debug: Launch",
            "description": "A new configuration for launching a TEAL program",
            "body": {
              "name": "Debug TEAL",
              "type": "teal",
              "request": "launch",
              "program": "^\"\\${file}\""
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.2",
    "node-fetch": "^2.6.7",
    "vscode-languageclient": "^8.0.2"
  }
}