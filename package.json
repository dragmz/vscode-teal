{
  "name": "teal",
  "displayName": "TEAL",
  "description": "Algorand TEAL language support for Visual Studio Code",
  "author": {
    "name": "DragMZ"
  },
  "publisher": "DragMZ",
  "license": "MIT",
  "version": "0.1.20",
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "url": "https://github.com/dragmz/vscode-teal"
  },
  "activationEvents": [
    "onLanguage:teal"
  ],
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "main": "./out/extension.js",
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "contributes": {
    "configuration": {
      "title": "TEAL",
      "properties": {
        "tealsp": {
          "type": "object",
          "scope": "resource",
          "properties": {
            "ui.semanticTokens": {
              "type": "boolean",
              "description": "Controls server side semantic tokens",
              "default": true,
              "scope": "resource"
            },
            "ui.inlayHints.named": {
              "type": "boolean",
              "description": "Controls inlay hints for named values",
              "default": true,
              "scrope": "resource"
            },
            "ui.inlayHints.decoded": {
              "type": "boolean",
              "description": "Controls inlay hints for decoded values",
              "default": true,
              "scrope": "resource"
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "teal.tools.install",
        "title": "TEAL: Install/Update Tools"
      }
    ],
    "languages": [
      {
        "id": "teal",
        "aliases": [
          "teal"
        ],
        "extensions": [
          ".teal"
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "teal"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.2",
    "node-fetch": "^2.6.7",
    "vscode-languageclient": "^8.0.2"
  }
}