{
  "name": "teal",
  "displayName": "TEAL",
  "description": "Algorand TEAL language support for Visual Studio Code",
  "author": {
    "name": "DragMZ"
  },
  "publisher": "DragMZ",
  "license": "MIT",
  "version": "0.3.5",
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.75.0"
  },
  "repository": {
    "url": "https://github.com/dragmz/vscode-teal"
  },
  "extensionPack": [
    "AlgorandFoundation.algokit-avm-vscode-debugger"
  ],
  "activationEvents": [
    "onLanguage:teal"
  ],
  "categories": [
    "Programming Languages",
    "Linters",
    "Formatters"
  ],
  "main": "./out/extension.js",
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "contributes": {
    "snippets": [
      {
        "language": "json",
        "path": "./snippets/transactions.code-snippets"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "*.avm.simulate.json",
        "url": "./schemas/simulate.schema.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "callbar",
          "title": "TEAL",
          "icon": "images/logo.png"
        }
      ]
    },
    "views": {
      "callbar": [
        {
          "id": "callbarview",
          "name": "Simulate Transactions",
          "icon": "images/logo.png",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "TEAL",
      "properties": {
        "tealsp": {
          "type": "object",
          "scope": "resource",
          "properties": {
            "ui.semanticTokens": {
              "type": "boolean",
              "description": "Controls server side semantic tokens",
              "default": true,
              "scope": "resource"
            },
            "ui.inlayHints.named": {
              "type": "boolean",
              "description": "Controls inlay hints for named values",
              "default": true,
              "scrope": "resource"
            },
            "ui.inlayHints.decoded": {
              "type": "boolean",
              "description": "Controls inlay hints for decoded values",
              "default": true,
              "scrope": "resource"
            },
            "ui.pc.lens": {
              "type": "boolean",
              "description": "Enables PC code lens",
              "default": false,
              "scope": "resource"
            },
            "ui.pc.inlay": {
              "type": "boolean",
              "description": "Enables PC inlay hints",
              "default": false,
              "scope": "resource"
            },
            "ui.programSize": {
              "type": "boolean",
              "description": "Show program size in status bar",
              "default": true,
              "scope": "resource"
            },
            "tealsp.channel": {
              "type": "string",
              "description": "tealsp release channel (stable/dev)",
              "default": "dev",
              "enum": [
                "stable",
                "dev"
              ],
              "scope": "resource"
            }
          }
        }
      }
    },
    "commands": [
      {
        "command": "teal.tools.install",
        "title": "TEAL: Install/Update Tools"
      },
      {
        "command": "teal.goto.pc",
        "title": "TEAL: Go to PC"
      },
      {
        "command": "teal.download",
        "title": "TEAL: Download from blockchain"
      },
      {
        "command": "teal.decompile",
        "title": "TEAL: Decompile from bytecode"
      },
      {
        "command": "teal.sourcemap.generate",
        "title": "TEAL: Generate Source Map"
      },
      {
        "command": "teal.transactions.simulate",
        "title": "TEAL: Simulate Transactions"
      },
      {
        "command": "teal.transactions.debug",
        "title": "TEAL: Debug Transactions"
      },
      {
        "command": "teal.transactions.create",
        "title": "TEAL: Create Transaction File"
      }
    ],
    "languages": [
      {
        "id": "teal",
        "aliases": [
          "teal"
        ],
        "extensions": [
          ".teal"
        ]
      }
    ],
    "breakpoints": [
      {
        "language": "teal"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/node": "16.x",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.2",
    "algosdk": "^3.5.2",
    "js-sha512": "^0.9.0",
    "node-fetch": "^2.6.7",
    "vscode-languageclient": "^8.0.2"
  }
}